@model LoginForm

<div class="logreg">
    <h2>Login:</h2>
    <form asp-action="LoginProcess" asp-controller="Logreg">
        <div class="form-group">
            <span asp-validation-for="Email1"></span>
            <br>
            <label asp-for="Email1">Email:</label>
            <input asp-for="Email1">
        </div>

        <div class="form-group">
            <label asp-for="Password1">Password:</label>
            <span asp-validation-for="Password1"></span>
            <input asp-for="Password1">
        </div>

        <button class="btn btn-primary">Submit</button>
    </form>
</div>